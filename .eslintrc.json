{
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "plugins": ["react"],
  "rules": {
    "react/display-name": "off",
    "react/prop-types": "off",
    "react-hooks/exhaustive-deps": "off",
    "no-unused-vars": ["warn"],
    "no-useless-catch": "off",
    "no-extra-boolean-cast": "off",
    "no-unreachable": "warn",
  }
}